<div class="page-header">
  <h1>
    Pokedex
    <a href="/pokemons/new" class="btn btn-lg btn-success">Add Pokemon</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Index</th>
        <th>Pokemon</th>
        <th>Types</th>
        <th>Current Level</th>
        <th>New Move Level</th>
        <th>Evolve Level</th>
        <th>Evolution Path</th>
        <th>Actions</th>
      </tr>

      <% @pokemons.each do |pokemon| %>
      <tr>
        <td><%= pokemon.index %></td>
        <td><a href="/pokemons/<%= pokemon.id %>"><%= pokemon.creature.capitalize %></a></td>
        <td><% pokemon.types.each do |type| %>
                <dd><%= type.title.capitalize %></dd>
            <% end %>
        </td>
        <td><%= pokemon.level %></td>
        <td><%= pokemon.new_move_level %></td>
        <td><%= pokemon.evolve_level %></td>
        <td><%= pokemon.other.titleize %></td>

        <td>
          <a href="/pokemons/<%= pokemon.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_pokemon/<%= pokemon.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
