<div class="page-header">
  <h1>
    Poketypes
    <a href="/poketypes/new" class="btn btn-lg btn-success">New Poketype</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Pokemon</th>
        <th>Type</th>
        <th>Actions</th>
      </tr>

      <% @poketypes.each do |poketype| %>
      <tr>
        <td><%= poketype.pokemon.creature %></td>
        <td><%= poketype.type.title %></td>
        <td>
          <a href="/poketypes/<%= poketype.id %>" class="btn btn-primary">Show</a>
          <a href="/poketypes/<%= poketype.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_poketype/<%= poketype.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
