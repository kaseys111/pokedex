<!-- Validation failure messages -->
<% if @poketype.errors.any? %>
  <% @poketype.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Poketype</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_poketype" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for pokemon_id -->
      <div class="form-group">
        <label for="pokemon_id" class="control-label">
          Pokemon
        </label>

        <input type="text" id="pokemon_id" name="pokemon_id" placeholder="Pokemon" class="form-control" value="<%= @poketype.pokemon_id %>">
      </div>

      <!-- Label and input for type_id -->
      <div class="form-group">
        <label for="type_id" class="control-label">
          Type
        </label>

        <input type="text" id="type_id" name="type_id" placeholder="Type" class="form-control" value="<%= @poketype.type_id %>">
      </div>

      <button class="btn btn-success">
        Create Poketype
      </button>
      or
      <a href="/poketypes">Cancel</a>
    </form>
  </div>
</div>
